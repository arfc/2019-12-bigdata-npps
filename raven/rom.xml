<Simulation verbosity="all">

  <RunInfo>
    <JobName>msr_channel_design</JobName>
	<!-- ordered list of step names that RAVEN will run -->
    <Sequence>load_input_file,run_ROM1</Sequence>
    <WorkingDir>raven_with_serpent</WorkingDir>
	<!-- number of parallel runs executed simultaneously -->
    <batchSize>1</batchSize>
  </RunInfo>
  <TestInfo>
    <name>ForwardSamplingStrategy</name>
    <author>mturkmen</author>
    <created>2019-01-11</created>
    <classesTested>Samplers.Grid</classesTested>
    <description>
      This input finds the optimized desings in a single fuel channel of molten salt reactor by using the grid technique
	  as one of the forward sampling methods.
    </description>
    <revisions>
      <revision date="2019-12-11" author="mturkmen">modified file to create machine-learning-enabled msr core design</revision>
    </revisions>
  </TestInfo>

  <Steps>
    <IOStep name="load_input_file">
	    <Input class="Files" type="">Grid_output</Input>
        <Output class="DataObjects" type="PointSet">ROM_samples</Output>
    </IOStep>
    <RomTrainer name="run_ROM1">
      <Input class="DataObjects" type="PointSet">ROM_samples</Input>
      <Output class="Models" type="ROM">ROM1</Output>
    </RomTrainer>
  </Steps>

  <Models>
    <ROM name="ROM1" subType="NDspline">
	  <Features>fuel_type,salt_type,U235F4_mole_frac,UF4_mole_frac,pitch,Tave_fuel,mod_salt_ratio</Features>
      <Target>k_inf, conversion_ratio, fast_flux_graph, feedback_doppler</Target>
      </ROM>
  </Models>
  
  <Files>
    <Input name="Grid_output" type=" ">Grid_output.csv</Input>
	<Input name="Feedback_output" type=" ">Feedback_output.csv</Input>
  </Files>
  
  <DataObjects>
    <PointSet name="ROM_samples">
      <Input>fuel_type,salt_type,U235F4_mole_frac,UF4_mole_frac,pitch,Tave_fuel,mod_salt_ratio</Input>
      <Output>k_inf, conversion_ratio, fast_flux_graph, feedback_doppler</Output>
    </PointSet>
  </DataObjects>

</Simulation>
